@model Book
<div class="container">
	<h1>Create Book</h1>
	<form method="post">
		<div class="mb-3">
			<label asp-for="Title" class="form-label">Title</label>
			<input asp-for="Title" type="text" class="form-control">
			<span asp-validation-for="Title" style="color:red"> </span>

		</div>

		<div class="mb-3">
			<label asp-for="Author" class="form-label">Author</label>
			<input asp-for="Author" type="text" class="form-control">
			<span asp-validation-for="Author" style="color:red"> </span>

		</div>
		 <div class="mb-3">
			<label asp-for="Price" class="form-label">Price</label>
			<input asp-for="Price" type="text" class="form-control">
			<span asp-validation-for="Price" style="color:red"> </span>

		</div>
	   <div class="form-group">
						<label asp-for="Category">Category</label>>
						<select asp-for="Category.Id" class="form-select">
							<option value="">Choose Category</option>
				@foreach (var category in ViewData["Categories"] as List<Category>)
				{
												<option value="@category.Id">@category.Name</option>
				}
						</select>
					</div>

		<div class="mb-3">
			<label asp-for="BookImages" class="form-label">Book Images</label>
			<input asp-for="BookCode" type="text" class="form-control">
			<span asp-validation-for="BookImages" style="color:red"> </span>

		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
							<button class="btn btn-light" asp-controller="Book" asp-action="Table">Cancel</button>

	</form>
</div>