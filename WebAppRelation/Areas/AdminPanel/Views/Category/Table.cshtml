@using WebAppRelation.Areas.AdminPanel.ViewModels;
@model AdminVM

<div class="content-wrapper">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="container">
                    <div class="d-flex" style="justify-content:space-around;align-items:center">
                        <h1>Categories</h1>
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create</a>
                    </div>
                    </div>
                <h4 class="card-title">Table with contextual classes</h4>
                <p class="card-description">
                    Add class <code>table-{color}</code>
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No:
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    ParentCategoryId
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var count = 0;
                            }

                            @foreach (var item in Model.Categories)
                            {
                                count++;
                                <tr class="table-info">
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.ParentCategoryId
                                    </td>                                 
                                
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>